@model SportsHall.Web.ViewModels.SportDetailsViewModel

<div class="card col-4 d-flex mx-auto" style="width: 600px; height:550px;">
    <img src="@Model.ImageUrl" class="card-img-top" alt="..." style="width: 600px; height:350px;">
    <div class="card-body">
        <h5 class="card-title text-center">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <a href="#" class="btn btn-primary float-end">Sign Up</a>
        <a asp-controller="Sport" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-controller="Sport" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
    </div>
</div>
