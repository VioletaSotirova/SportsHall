@model SportsHall.Web.ViewModels.CoachDetailsViewModel

<div class="card col-8 d-flex mx-auto" style="height: auto; padding: 1rem;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="..." style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        <div class="col-md-8 d-flex flex-column justify-content-between">
            <div class="card-body">
                <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                <p class="card-text"><strong>Contacts:</strong></p>
                <p class="card-text">Email: @Model.Email</p>
                <p class="card-text">Phone: @Model.Phone</p>
                <p class="card-text">@Model.Expirience</p>
            </div>
            <div class="card-footer d-flex justify-content-start">
                <form asp-controller="Coach" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a asp-controller="Coach" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>
