@model SportsHall.Web.ViewModels.TrainingCreateViewModel

    <div class="container d-flex justify-content-center mt-5">
        <div class="card p-4" style="width: 50rem;">
    <h2>Create Training</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="SportId">Sport</label>
            <select asp-for="SportId" asp-items="Model.Sports" class="form-control"></select>
            <span asp-validation-for="SportId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CoachId">Coach</label>
            <select asp-for="CoachId" asp-items="Model.Coaches" class="form-control"></select>
            <span asp-validation-for="CoachId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TrainingStatusId">Status</label>
            <select asp-for="TrainingStatusId" asp-items="Model.TrainingStatuses" class="form-control"></select>
            <span asp-validation-for="TrainingStatusId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Start">Start</label>
            <input asp-for="Start" class="form-control" type="datetime-local" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location">Location</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Duration">Duration (minutes)</label>
            <input asp-for="Duration" class="form-control" type="number" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
</div>
